<h2>Sign up</h2>

<%= bootstrap_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

    <%= f.text_field :username, autofocus: true, class: "sizing" %>
    <%= f.email_field :email, autofocus: true, class: "sizing" %>

    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off", class: "sizing" %>
    <%= f.password_field :password_confirmation, autocomplete: "off", class: "sizing" %>
    <%= f.submit "Sign up" %>

<% end %>

<%= render "devise/shared/links" %>
