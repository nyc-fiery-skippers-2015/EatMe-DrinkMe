<% @user ||= current_user %>
<div class="user-info">
  <a href="<%= following_user_path(@user) %>", id="following">
    <strong id="following" class="stat">
      <%= @user.following.count %>
    </strong>
    following
  </a>
  <a href="<%= followers_user_path(@user) %>", id="followers">
    <strong id="followers" class="stat">
      <%= @user.followers.count %>
    </strong>
    follower(s)
  </a>
</div>