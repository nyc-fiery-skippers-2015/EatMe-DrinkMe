<h1>Edit Dish</h1>
<%= form_for([@experience, @dish]) do |f| %>

  <% if @dish.errors.any? %>
    <div id = 'error_explanation'>
      <h2>
        <%= pluralize(@dish.errors.count,'error') %> Prohibited this Dish from saving:
      </h2>
      <ul>
        <% @dish.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
      Venue: <input class="controls" type="text" is="autocomplete-input" placeholder="<%= @dish.venue.name %>"/>
  </div>

  <p>
    <%= f.label :Dish %>
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :Picture %>
    <% if @dish.dishpicture.file? %>
      <%= image_tag @dish.dishpicture.url(:thumb) %>
    <% end %>
    <%= f.file_field :dishpicture %>
  </p>
  <p>
    <%= f.label :Review %>
    <%= f.text_area :review %>
  </p>

  <%= f.submit %>
<% end %>
<%= link_to 'Back', experiences_path %>