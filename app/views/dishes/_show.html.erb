<%= (dish.dishpicture.file? ? image_tag(dish.dishpicture.url(:large)) : image_tag("No_image_available.svg", size: '150x150', class: 'dish-pic')) %>
<div class="update_buttons">
  <div><%= link_to 'Edit', edit_experience_dish_path(experience, dish) %></div>
  <div><%= link_to 'Delete', experience_dish_path(experience, dish), method: :delete, data: {confirm: 'Are you sure?'}, class: "delete-dish" %></div>
</div>
<div class="venue-details">
  <div> <%= dish.venue.name %> </div>
  <div> <%= dish.venue.address %> </div>
  <div> <%= dish.venue.city %> <%= dish.venue.state %>, <%= dish.venue.zip %></div>
  <div> <%= dish.venue.phone %></div>
  <div> <%= link_to "#{dish.venue.website}", dish.venue.website %></div>
</div>