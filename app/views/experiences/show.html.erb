<div><%= @experience.name %> posted by: <%= link_to "#{@experience.user.username}", user_path(@experience.user) %></div>

<div id="myModal2" class="modal fade" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
    </div>
  </div>
</div>
<% if @experience.user == current_user %>
  <%= link_to 'Add another dish', new_experience_dish_path(@experience), data: {toggle: "modal", target: "#myModal2"} %>
<% end %>

<% if @experience.dishes %>
  <% @experience.dishes.each do |dish| %>
    <%= render partial: 'dishes/show', locals: {experience: @experience, dish: dish} %>
  <% end %>
<% end %>